<% include ../partials/header.ejs %>

<!-- Content goes here -->

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <a href="/contact-list/add" role="button" class="btn btn-primary">Add</a>
      <br />
      <table class="table table-bordered table-striped table-hover">
        <!-- Header Row-->
        <tr>
          <th class="text-center">First Name</th>
          <th class="text-center">Last Name</th>
          <th class="text-center">Age</th>
          <th class="text-center">Edit</th>
          <th class="text-center">Delete</th>
        </tr>

        <!-- Template Row-->
        <% for(let count = 0; count < contactList.length; count++) { %>
        <tr>
          <td class="text-center"><%= contactList[count].firstName %></td>
          <td class="text-center"><%= contactList[count].lastName %></td>
          <td class="text-center"><%= contactList[count].age %></td>
          <td class="text-center">
            <a href="/contact-list/edit/<%= contactList[count]._id %>" class="btn btn-primary">Edit</a>
          </td>
          <td class="text-center">
            <a href="/contact-list/delete/<%= contactList[count]._id %>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
